      <div class="blog-header">

        <h1 class="blog-title"><%= full_title(page_title) %></h1>
        <p class="lead blog-description">The official example template of creating a blog with Bootstrap.</p>
      </div>

            <% @blog.posts.each do |post| %>

 <div class="blog-post">
            <h2 class="blog-post-title"><%= link_to post.title, blog_post_path(@blog, post) %></h2>
            <p class="blog-post-meta"><%= post.created_at %> by <a href="#"><%= @user.name %></a></p>
        <%= post.body %>
        <%= link_to 'Edit', edit_blog_post_path(@blog, post) %> |
</div>



      <% end %>

<p id="notice"><%= notice %></p>




